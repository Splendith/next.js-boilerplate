{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./", // all paths are relative to the baseUrl
    "paths": {
      "pages/*": ["pages/*"],
      "src/*": ["src/*"],
      "~/*": ["*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
