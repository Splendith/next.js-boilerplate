{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./", // all paths are relative to the baseUrl
    "paths": {
      "~/*": ["*"],
      "~src/*": ["src/*"],
      "~pages/*": ["src/pages/*"],
      "~public/*": ["public/*"],
      "~static/*": ["public/static/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
